#!/bin/bash

if [ $# -lt 6 ]; then
  echo "Usage: wdmexp scenario type(=land/river/met/prad) wdm dsn syear eyear"
  echo "May also be called with cbp wrapper: cbp wdmexp scenario type(=land/river/met/prad) wdm dsn syear eyear"
  exit 1
fi

. hspf_config


scenario=$1
type=$2
wdm=$3
dsn=$4
syear=$5
eyear=$6

case $type in
  land)
    luname=${wdm:0:3}
    cd $CBP_ROOT/tmp/wdm/land/$luname/$scenario
    ;;

  *)
    echo "Cannot handle wdm type $type"
    exit
    ;;
esac

params="$wdm,$syear,$eyear,$dsn"
echo "echo $params | wdm2text"
echo $params | wdm2text
